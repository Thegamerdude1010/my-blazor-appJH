@page "/ipo"

<h1>Multiplication Page</h1>

<p>Input a number </p>

<input @bind="InputString1 " />

<p>Input a second number </p>

<input @bind="InputString2 " />

<button class="btn btn-primary" @onclick="DoProcessing">Do it</button>

<p>Output: @OutputString </p>

@code

{

    private string InputString1 { get; set; }

    private string InputString2 { get; set; }

    private string OutputString { get; set; }

    private void DoProcessing()

    {

        double num1 = double.Parse(InputString1);
        double num2 = double.Parse(InputString2);
        double ans;

        ans = num1 * num2;

        OutputString = ans.ToString();

    }

}